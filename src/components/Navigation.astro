---
import "../styles/navigation.css";
---

<div class="links nav-links">
  <a class="button" href="/">Home</a>
  <a class="button" href="/about/">About</a>
  <a class="button" href="/blog/">Blog</a>
  <a class="button" href="/tags/">Tags</a>
</div>
<style>
  h1 {
    font-size: 22px;
    margin-top: 0.25em;
  }

  .links.nav-links {
    display: flex;
    justify-content: flex-start;
    gap: 16px;
  }

  .nav-links a {
    display: flex;
    align-items: center;
    padding: 10px 12px;
    color: #111827;
    text-decoration: none;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: rgb(78, 80, 86);
  }

  .nav-links a svg {
    height: 1em;
    margin-left: 8px;
  }

  .nav-links a.button {
    color: white;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24);
    border-radius: 10px;
  }

  .nav-links a.button:hover {
    color: rgb(230, 230, 230);
    box-shadow: none;
  }

  /* nav styles */

  .nav-links {
    width: 100%;
    top: 5rem;
    left: 48px;
    background-color: #ff9776;
    display: none;
    margin: 0;
  }

  .nav-links a {
    display: block;
    text-align: center;
    padding: 10px 0;
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: bold;
    text-transform: uppercase;
  }

  .nav-links a:hover,
  .nav-links a:focus {
    background-color: #ff9776;
  }

  .expanded {
    display: flex;
  }

  @media screen and (min-width: 636px) {
    .nav-links {
      margin-left: 5em;
      display: block;
      position: static;
      width: auto;
      background: none;
    }

    .nav-links a {
      display: inline-block;
      padding: 15px 20px;
    }
  }s
</style>
