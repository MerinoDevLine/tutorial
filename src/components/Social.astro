---
import { Icon } from 'astro-icon/components'
const { platform, username } = Astro.props;
---
<a href={`https://www.${platform}.com/${username}`} title={platform}><Icon name={"mdi:" + platform} /></a>

<style>
  .footer-social {
    display: flex;
    align-items: center;
    column-gap: 1rem;
  }

  [data-icon] {
    font-size: 2rem;
    color: #202020;
  }
</style>