---
import Navigation from "../components/Navigation.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Layout from "../layouts/Layout.astro";
import '../styles/global.css';
const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "Astro Blog"
---

<BaseLayout pageTitle={pageTitle}>
  <h1>Keep updated with our Blog!</h1>
  <section class="news">
    <h3>Updated Release Intentions</h3>
    <ul>
      {allPosts.map((post) => <li><a href={post.url}>{post.frontmatter.title} - <small>{ new Date(post.frontmatter.pubDate).toLocaleDateString()}</small></a></li>)}
    </ul>
    
  </section>
</BaseLayout>